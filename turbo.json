{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "deploy": {
      "cache": false,
      "passThroughEnv": [
        "CLOUDFLARE_API_TOKEN",
        "ALCHEMY_PASSWORD",
        "ALCHEMY_STATE_TOKEN",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "CORS_ORIGIN",
        "VITE_SERVER_URL",
        "CI"
      ]
    },
    "destroy": {
      "cache": false
    }
  }
}
